      "uid": {
        "type": "UID",
        "config": {
          "label": "uid"
        }
      }
    },
    "Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": ""
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "meta_image",
          "constraint": {
            "width": 1200,
            "height": 628
          },
          "thumbnails": []
        }
      }
    }
